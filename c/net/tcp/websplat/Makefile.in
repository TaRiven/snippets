SHELL=/bin/sh
CC=@CC@
LINT=lint
INCLUDES=-I.
DEFINES=
CFLAGS=@CFLAGS@ $(INCLUDES) $(DEFINES)
LIBS=@LIBS@
LDFLAGS=$(LIBS)

.SUFFIXES: .c .o .l .a .ln
OBJS=main.o sockets.o url.o
SRCS=main.c sockets.c url.c
LINTS=main.ln sockets.ln
EXES=websplat
AUTOJUNK=config.h config.status config.cache config.log Makefile
JUNK=$(OBJS) $(EXES) $(LINTS)

websplat: $(OBJS)
	$(CC) $(CFLAGS) -o $@ $(OBJS) $(LDFLAGS)

lint: $(LINTS)
	$(LINT) $(LINTS)

.c.ln:
	$(LINT) $(INCLUDES) -c $<

clean:
	rm -f $(JUNK) core

ultrabrite: clean
	rm -f $(AUTOJUNK)

distclean: ultrabrite
