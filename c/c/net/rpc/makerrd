#!/bin/sh

for i in "$@"
do
	/usr/local/rrdtool-1.0.33/bin/rrdtool create "$i" \
		-s 60 \
		DS:cpu_user:COUNTER:300:0:100 \
		DS:cpu_iow:COUNTER:300:0:100 \
		DS:cpu_sys:COUNTER:300:0:100 \
		DS:cpu_idl:COUNTER:300:0:100 \
		DS:pgin:COUNTER:300:0:100 \
		DS:pgout:COUNTER:300:0:100 \
		DS:intr:COUNTER:300:0:100 \
		DS:ipkts:COUNTER:300:0:100 \
		DS:opkts:COUNTER:300:0:100 \
		DS:coll:COUNTER:300:0:100 \
		DS:errors:COUNTER:300:0:100 \
		DS:cs:COUNTER:300:0:100 \
		DS:load1:GAUGE:300:0:100 \
		DS:load5:GAUGE:300:0:100 \
		DS:load15:GAUGE:300:0:100 \
		RRA:AVERAGE:0.5:5:8640 \
		RRA:MAX:0.5:5:8640 \
		RRA:AVERAGE:0.5:120:2160 \
		RRA:MAX:0.5:120:2160 \
		RRA:AVERAGE:0.5:1440:1825 \
		RRA:MAX:0.5:1440:1825
done
