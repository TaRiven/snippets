// Copyright (c) 2003  Dustin Sallings <dustin@spy.net>Filter "Grid";Group "Dustin's Filters";FullFrame;input hblock, "Horizontal Blocks", Slider, 2, 1, 100;input vblock, "Vertical Blocks", Slider, 2, 1, 100;// input alpha, "Alpha", Slider, 0, 0, 255;input linecolor, "Line Color", color, 255, 0, 0, 0;input thickness, "Line Thickness", slider, 1, 1, 10;Codefloat i;float w, h;float xoff, yoff;point bounds[4];point a, b;dest=src1;dimensionsOf(dest, w, h);boundsOf(dest, bounds);// Draw the vertical lines (horizontal blocks)for i = 1 to hblock	xoff = bounds[0].x + (w * (i / hblock));		a.x = xoff;	b.x = xoff;	a.y = bounds[0].y;	b.y = bounds[2].y;	line(a, b, dest, linecolor, thickness);next// Draw the horizontal lines (vertical blocks)for i = 1 to vblock	yoff = bounds[0].y + (h * (i / vblock));		a.y = yoff;	b.y = yoff;	a.x = bounds[0].x;	b.x = bounds[1].x;	line(a, b, dest, linecolor, thickness);next