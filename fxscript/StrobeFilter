// Copyright (c) 2003  Dustin Sallings <dustin@spy.net>Filter "Strobe";Group "Dustin's Filters";ProducesAlpha;FullFrame;input keep, "Keep", Slider, 15, 1, 100;input drop, "Drop", Slider, 15, 1, 100;input alpha, "Alpha", Slider, 0, 0, 255;input solid, "Solid Fill", CheckBox, false;input fillcolor, "Drop Color", color, 255, 0, 0, 0;input debug, "Debug", CheckBox, false;Codestring tmpstring;point  rrrr[4];region rgn;float cycle;float current;cycle=keep + drop;current=frame % cycle;if (integer(current) < keep)    dest = src1Else	srcType1 = kAlpha;	dest = src1	if(solid)		ChannelFill(dest, alpha, fillcolor.r, fillcolor.g, fillcolor.b);	Else		ChannelFill(dest, alpha, knone, knone, knone);	End IfEnd Ifif (debug)	SetTextSize(14);	NumToString(frame, tmpstring, kFloat2);	MakeRect(rrrr, -80, 0, 160, 40);	DrawStringPlain("frm: " + tmpstring, rrrr, dest, kgreen, aspectof(dest));	NumToString(current, tmpstring, kFloat2);	MakeRect(rrrr, -80, 20, 160, 40);	DrawStringPlain("cur: " + tmpstring, rrrr, dest, kgreen, aspectof(dest));	NumToString(duration, tmpstring, kFloat2);	MakeRect(rrrr, -80, 40, 160, 40);	DrawStringPlain("dur: " + tmpstring, rrrr, dest, kgreen, aspectof(dest));	ResetText;End If;